<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<HBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" HBox.hgrow="ALWAYS">
    <padding>
        <Insets top="5" right="5" bottom="5" left="15"/>
    </padding>

    <VBox alignment="CENTER" spacing="5" prefWidth="50">
        <Label fx:id="month" styleClass="transaction-month"/>
        <Label fx:id="day" styleClass="transaction-day"/>
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
        <HBox spacing="5">
            <Label fx:id="name" styleClass="transaction-name"/>
            <ImageView fx:id="done" />
        </HBox>
        <Label fx:id="description" styleClass="transaction-description"/>
    </VBox>

    <Region HBox.hgrow="ALWAYS"/>

    <VBox alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="status" styleClass="amount"/>
        <Label fx:id="amount" styleClass="amount"/>
    </VBox>
</HBox>
